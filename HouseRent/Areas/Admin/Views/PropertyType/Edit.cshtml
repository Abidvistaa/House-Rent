@model HouseRent.Models.PropertyType
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info">Edit PropertyType</h2>
<br />
<form asp-action="Edit" method="post">
    <div class="row" style="width:40%">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group col-4">
            <label>Property Type</label>
        </div>

        <div class="form-group col-8">
            <input asp-for="PropType" class="form-control" />
            <span asp-validation-for="PropType" class="text-danger"></span>
        </div>
        <div class="form-group offset-6" style="padding-left:25px">
            <a asp-action="Index" class="btn btn-dark">Back To List</a>
            <input type="submit" value="Update" class="btn btn-success" />
        </div>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

