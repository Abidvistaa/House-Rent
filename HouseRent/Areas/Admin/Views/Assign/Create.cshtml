@model DeviceShop.Areas.Admin.Models.UserRoleVM
@{
    ViewData["Title"] = "Assign";
}
<br />
<h2 class="text-info">Assign User Role</h2>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border" style="width:70%">
        <div asp-validation-summary="ModelOnly"></div>
        <h3 style="color:red">@ViewBag.msg</h3>
        <div class="form-group row">
            <div class="col-3">
                <label >User Name</label>
            </div>
            <div class="col-5">
                <select asp-for="UserId" asp-items="ViewBag.UserId" class="form-control"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label >Role Name</label>
            </div>
            <div class="col-5">
                <select asp-for="RoleId" asp-items="ViewBag.RoleId" class="form-control"></select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
        </div>
        <div style="padding-left:260px">
            <input type="submit" value="Assign" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-secondary">Back To List</a>
        </div>
    </div>

</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}